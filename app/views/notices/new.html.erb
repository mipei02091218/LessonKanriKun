<div class="main-container">
  <div class="main-contents">
    <h1>お知らせ投稿</h1>

    <%= form_with model: @notice, local: true, html: { class: "notice-form" } do |f| %>
      <div class="form-group">
        <%= f.label :content, "内容", class: "form-label" %>
        <%= f.text_area :content, class: "form-textarea", rows: 6 %>
      </div>

      <div class="form-group submit-group">
        <%= f.submit "投稿する", class: "btn btn-submit" %>
      </div>
    <% end %>

    <div class="return_to_top">
      <%= link_to "戻る", root_path, class: "btn btn-return" %>
    </div>
  </div>
</div>
