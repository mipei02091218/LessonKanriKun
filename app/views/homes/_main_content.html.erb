<div class="main-contents-header">
  <h1 class="header-title">お知らせ</h1>
</div>

<div class="notice_lists">
  <% @notices.each do |notice| %>
    <div class="notice">
      <p class="notice-content">
        <% if current_user.teacher? %>
          <%= link_to notice.content, edit_notice_path(notice), class: "notice-link" %>
        <% else %>
          <%= notice.content %>
        <% end %>
      </p>
      <p class="notice-date">（<%= notice.created_at.strftime("%Y年%m月%d日 %H:%M") %>）</p>
    </div>
  <% end %>
</div>