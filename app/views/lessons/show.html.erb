<div class="main-container">
  <div class="main-contents">
    <div class="lesson-detail">
      <h1>レッスン詳細</h1>

      <p><strong>開始時間:</strong> <%= @lesson.start_time.strftime('%Y年%m月%d日 %H:%M') %></p>

      <div class="absence-section">
        <% if @absence %>
          <p class="absence-message">このレッスンは欠席登録済みです。</p>
          <%= button_to "欠席を取り消す", lesson_absence_path(@lesson, @absence),
                        method: :delete, data: { confirm: "欠席を取り消しますか？" }, class: "btn btn-cancel-absence" %>
        <% else %>
          <%= button_to "このレッスンを欠席する", lesson_absences_path(@lesson),
                        method: :post, data: { confirm: "欠席登録してもよいですか？" }, class: "btn btn-register-absence" %>
        <% end %>
      </div>

      <div class="return-to-calendar">
        <%= link_to "カレンダーに戻る", lessons_path, class: "btn btn-return" %>
      </div>
    </div>
  </div>
</div>
