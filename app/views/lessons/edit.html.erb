<div class="main-container">

  <div class="main-contents">
    <div class="lesson-register">
      <h1>レッスン開始時間編集</h1>
      <div class="register">
      <%= form_with(model: @lesson, local: true) do |form| %>

        <div class="time">
          <%= form.label :start_time %>
          <%= form.datetime_select :start_time %>
        </div>

        <div class="submit">
          <%= form.submit %>
        </div>

      <% end %>
      </div>
      <h2>レッスン削除</h2>
      <div class="delete-lesson">
      <%= button_to "削除", lesson_path(@lesson), method: :delete %>
      </div>

      <h2>欠席者一覧</h2>
      <% if @absent_students.any? %>
        <ul>
        <% @absent_students.each do |student| %>
          <li><%= student.name %></li>
        <% end %>
        </ul>
      <% else %>
        <p>欠席者はいません。</p>
      <% end %>
      
      <div class="return-to-calendar">
        <%= link_to "カレンダーに戻る", lessons_path, class: "btn btn-return" %>
      </div>
    </div>
  </div>
</div>