<div class="main-container">
  <div class="main-contents">
    <div class="lesson-register">
      <h1>レッスン開始時間登録</h1>

      <%= form_with(model: @lesson, local: true, html: { class: "lesson-form" }) do |form| %>
        <div class="form-group">
          <%= form.label :start_time, "開始日時", class: "form-label" %>
          <div class="form-input datetime-select">
            <%= form.datetime_select :start_time, start_year: 2025, minute_step: 10 %>
          </div>
        </div>

        <div class="form-group submit-group">
          <%= form.submit "登録する", class: "btn btn-submit" %>
        </div>
      <% end %>

      <div class="return-to-calendar">
        <%= link_to "カレンダーに戻る", lessons_path, class: "btn btn-return" %>
      </div>
    </div>
  </div>
</div>
