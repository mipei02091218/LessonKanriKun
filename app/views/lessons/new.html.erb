<div class="main-container">
  <div class="side-bar">
    <%= render "homes/side_bar" %>
  </div>
  <div class="main-contents">
    <div class="lesson-register">
      <h1>レッスン開始時間登録</h1>
      <div class="register">
      <%= form_with(model: @lesson, local: true) do |form| %>

        <div class="time">
          <%= form.label :start_time %>
          <%= form.datetime_select :start_time, start_year: 2025, minute_step: 10 %>
        </div>

        <div class="submit">
          <%= form.submit %>
        </div>

      <% end %>

      <div class="return_to_calendar">
        <%= link_to "カレンダーに戻る", lessons_path %>
      </div>
      
      </div>
    </div>
  </div>
</div>